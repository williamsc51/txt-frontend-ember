<div class="container-fluid">

    <form onsubmit={{action "updateBook"}}>
        <div class="row">
                <div class="col-md-12">
                    <div class="form-group form-group-sm">
                        <label class="control-label">Title</label>
                        {{input type="text" class="form-control" value=model.title}}
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                      <label class="control-label">Author</label>
                      {{input type="text" class="form-control" value=model.author}}
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                      <label class="control-label">ISBN</label>
                      {{input type="text" class="form-control" value=model.isbn}}
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                      <label class="control-label">Price</label>
                      {{input type="text" class="form-control" value=model.price}}
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                      <label class="control-label">Description</label>
                      {{textarea class="form-control" value=model.description}}
                    </div>
                </div>

                <img src={{model.thumbnail}} alt="">
								<div class="col-md-12">
										{{cover-image sendCover=(action 'sendCover')}}
								</div>

								<div class="col-md-12">
										<div class="form-group">
											<label class="control-label">Condition</label>
											<select onchange={{action "setCondition" value="target.value"}}>
												 <option disabled selected> {{model.condition}} </option>
												    <option value="excellent">Excellent</option>
												    <option value="good">Good</option>
														<option value="average">Average</option>
														<option value="poor">Poor</option>
											</select>
										</div>
								</div>
                                
								<div class="col-md-12">
										<div class="form-group">
											<label class="control-label">Category</label>
											<select onchange={{action "setCategory" value="target.value"}}>
												 <option disabled selected> {{ model.category }} </option>
												    <option value="novel">Novel</option>
												    <option value="college">College Level</option>
														<option value="highSchool">High School Level</option>
														<option value="kids">Kids</option>
											</select>
										</div>
								</div>
        </div>

             <div class="bluebtn">
                    <button type="submit">Update</button>
                </div>
    </form>
</div>