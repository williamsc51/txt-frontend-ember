
      {{#bs-navbar as |navbar|}}

        
        {{navbar.toggle}}

          <img src="/logo/logo_head.png" atl="Logo" class="logo" />

          <div class="order-md-3">
            {{#if session.isAuthenticated}}
                <button type="button" {{action "logOut"}}>Logout</button>
            {{else}}
                {{link-to 'Sign In' 'login'}}
            {{/if}}
          </div>

            {{#navbar.content}}
              {{#navbar.nav as |nav|}}
                {{#nav.item}}{{#nav.link-to "index"}} Home {{/nav.link-to}}{{/nav.item}}
              {{#if session.isAuthenticated}}  
                {{#nav.item}}{{#nav.link-to "users.profile"}} My Account {{/nav.link-to}}{{/nav.item}}
              {{/if}}
                {{#nav.item}}{{#nav.link-to "books"}} Deals {{/nav.link-to}}{{/nav.item}}
                {{#nav.item}}{{#nav.link-to "sign-up"}} Register {{/nav.link-to}}{{/nav.item}}
              {{/navbar.nav}}
            {{/navbar.content}}

      {{/bs-navbar}}

